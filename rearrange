#!/bin/bash
# organize_verilog.sh — move each .v file into its own folder

# Find all .v files recursively
find . -type f -name "*.v" | while read -r file; do
    dir=$(dirname "$file")
    base=$(basename "$file" .v)
    newdir="$dir/$base"

    # Create folder if it doesn't exist
    mkdir -p "$newdir"

    # Move file inside its folder
    mv "$file" "$newdir/"
    echo "Moved $file → $newdir/"
done

echo "✅ All Verilog files organized!"
